{
  "name": "cdk",
  "version": "0.1.0",
  "bin": {
    "cdk": "bin/cdk.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "synth": "cdk synth",
    "bootstrap:local": "cdklocal bootstrap --require-approval never",
    "deploy:local": "cdklocal deploy --require-approval never",
    "destroy:local": "cdklocal destroy --force",
    "local:up": "docker compose up -d",
    "local:down": "docker compose down -v",
    "local:deploy": "npm run build && npm run bootstrap:local && npm run deploy:local"
}
  "devDependencies": {
    "aws-cdk-local": "^2.0.0"
    "@types/jest": "^26.0.10",
    "@types/node": "10.17.27",
    "jest": "^26.4.2",
    "ts-jest": "^26.2.0",
    "aws-cdk": "2.80.0",
    "ts-node": "^9.0.0",
    "typescript": "~3.9.7"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.185.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.16"
  }
}
